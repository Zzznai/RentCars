@{
}
<div class="site-wrap" id="home-section">

    <!-- Header Section -->
    <header class="site-navbar site-navbar-target" role="banner">
        <div class="container">
            <div class="row align-items-center position-relative">
                <div class="col-3">
                    <div class="site-logo">
                        <a href="admin_index.html"><strong>CarRental</strong></a>
                    </div>
                </div>
                <div class="col-9 text-right">
                    <span class="d-inline-block d-lg-none"><a href="#" class="site-menu-toggle js-menu-toggle py-5"><span class="icon-menu h3 text-black"></span></a></span>
                    <nav class="site-navigation text-right ml-auto d-none d-lg-block" role="navigation">
                        <ul class="site-menu main-menu js-clone-nav ml-auto">
                            <li><a href="cars.html" class="nav-link">Go back</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>

    <!-- Hero Section -->
    <div class="hero inner-page" style="background-image: url('/images/hero_1_a.jpg');">
        <div class="container">
            <div class="row align-items-end">
                <div class="col-lg-5">
                    <div class="intro">
                        <h1 class="text-black"><strong>Add Car</strong></h1>
                        <div class="custom-breadcrumbs text-black"><a href="cars.html">Cars</a> <span class="mx-2">/</span> <strong>Add Car</strong></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- User Management Section -->
    <div class="site-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <div class="card">
                        <div class="card-body">
                            <form id="userForm" method="post" enctype="multipart/form-data">
                                <div class="form-group row">
                                    <label for="brand" class="col-sm-3 col-form-label">Brand:</label>
                                    <div class="col-sm-9">
                                        <input asp-for="Brand" type="text" class="form-control" id="brand" name="brand" required>
                                        <span asp-validation-for="Brand" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="model" class="col-sm-3 col-form-label">Model:</label>
                                    <div class="col-sm-9">
                                        <input asp-for="Model"  type="text" class="form-control" id="model" name="model" required>
                                        <span asp-validation-for="Model" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="engine" class="col-sm-3 col-form-label">Engine:</label>
                                    <div class="col-sm-9">
                                        <select asp-for="EngineType" class="form-control" id="engine" name="engine" required>
                                            <option value="petrol">Petrol</option>
                                            <option value="diesel">Diesel</option>
                                            <option value="electric">Electric</option>
                                            <option value="hybrid">Hybrid</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="EngineType" class="text-danger"></span>
                                </div>
                                <div class="form-group row">
                                    <label for="image" class="col-sm-3 col-form-label">Upload Image:</label>
                                    <div class="col-sm-9">
                                        <input type="file" asp-for="Image" class="form-control-file" id="image" name="image" accept="image/*" required>
                                        <small class="form-text text-muted">Please select an image file.</small>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="year" class="col-sm-3 col-form-label">Year:</label>
                                    <div class="col-sm-9">
                                        <input asp-for="Year"  type="text" class="form-control" id="year" name="year" required>
                                        <span asp-validation-for="Year" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="PassengerCapacity" class="col-sm-3 col-form-label">Passenger Capacity:</label>
                                    <div class="col-sm-9">
                                        <input asp-for="PassengerCapacity" type="text" class="form-control" id="PassengerCapacity" name="PassengerCapacity" required>
                                        <span asp-validation-for="PassengerCapacity" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="RentalPricePerDay" class="col-sm-3 col-form-label">Rental Price per Day:</label>
                                    <div class="col-sm-9">
                                        <input asp-for="RentalPricePerDay" type="price" class="form-control" id="RentalPricePerDay" name="RentalPricePerDay" required>
                                        <span asp-validation-for="RentalPricePerDay" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="Description" class="col-sm-3 col-form-label">Description:</label>
                                    <div class="col-sm-9">
                                        <input asp-for="Description" type="price" class="form-control">
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row justify-content-center text-center">
                                    <div class="text-center mb-1">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    </div>
                                </div>
                                <div class="form-group text-center">
                                    <button type="submit" class="btn btn-primary btn-submit">Submit</button>
                                    <button type="button" class="btn btn-primary btn-cancel" onclick="window.location.href='cars.html'">Cancel</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>