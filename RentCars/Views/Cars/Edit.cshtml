<!-- Hero Section -->
<div class="hero inner-page" style="background-image: url('images/hero_1_a.jpg');">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-5">
                <div class="intro">
                    <h1 class="text-black"><strong>Edit Car</strong></h1>
                    <div class="custom-breadcrumbs text-black"><a href="cars.html">Cars</a> <span class="mx-2">/</span> <strong>Edit Car</strong></div>
                </div>
            </div>
        </div>
