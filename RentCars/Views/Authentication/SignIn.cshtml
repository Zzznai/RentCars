@model UserSignInViewModel

@{
    ViewData["Title"] = "Sign In";
}

<div class="hero inner-page" style="background-image: url('images/hero_1_a.jpg');">
    <div class="container">
        <div class="row align-items-end ">
            <div class="col-lg-5">
                <div class="intro">
                    <h1><strong>Sign In</strong></h1>
                    <div class="custom-breadcrumbs"><a href="index.html">Home</a> <span class="mx-2">/</span> <strong>Sign In</strong></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section bg-light" id="contact-section">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-7 text-center mb-5">
                <h2>Enter your credentials</h2>
            </div>
        </div>
        <div class="row justify-content-center text-center">
            <div class="col-lg-8 mb-5">
                <form asp-controller="Authentication" asp-action="SignIn" method="post">
                    <div class="form-group row">
                        <div class="col-md-10" style="margin: auto;">
                            <input class="form-control" asp-for="Username" placeholder="Username">
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-10" style="margin: auto;">
                            <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row justify-content-center text-center">
                        <div class="text-center mb-1">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-10" style="margin: auto;">
                            <button type="submit" class="btn btn-block btn-primary text-white py-3 px-5">Sign In</button>
                        </div>
                    </div>
                    <span class="text-danger"></span>
                </form>
            </div>
        </div>
    </div>
</div>
